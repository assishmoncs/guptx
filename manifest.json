{
  "manifest_version": 3,
  "name": "GuptX",
  "version": "1.0.0",
  "description": "Stealth AI assistant overlay — instant, minimal, always ready.",

  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/storage.js",
        "api/llm.js",
        "content/overlay.js",
        "content/content.js"
      ],
      "css": ["content/overlay.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Alt+X",
        "mac": "Alt+X"
      },
      "description": "Toggle GuptX overlay"
    }
  },

  "web_accessible_resources": [
    {
      "resources": [
        "content/overlay.html",
        "assets/icon.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16":  "assets/icon.png",
    "48":  "assets/icon.png",
    "128": "assets/icon.png"
  },

  "action": {
    "default_icon": "assets/icon.png",
    "default_title": "GuptX — Toggle with Alt+X"
  }
}
